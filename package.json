{
  "name": "node-rs",
  "version": "0.0.0",
  "private": true,
  "description": "Node & Rust bindings monorepo",
  "license": "MIT",
  "author": "LongYinan <lynweklm@gmail.com>",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "artifacts": "yarn workspaces foreach -A --no-private run artifacts",
    "build": "yarn workspaces foreach -A --no-private -j 1 run build",
    "build:ts": "tsc -b tsconfig.json -verbose",
    "lint": "oxlint .",
    "test": "ava",
    "format": "run-p format:oxfmt format:rs format:toml",
    "format:oxfmt": "oxfmt --write .",
    "format:rs": "cargo fmt --all",
    "format:toml": "taplo format",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@napi-rs/cli": "^3.5.1",
    "@napi-rs/wasm-runtime": "^1.1.1",
    "@tybys/wasm-util": "^0.10.1",
    "@types/node": "^25.0.6",
    "ava": "^6.4.1",
    "cross-env": "^10.1.0",
    "husky": "^9.1.7",
    "lerna": "^9.0.3",
    "lint-staged": "^16.2.7",
    "npm-run-all2": "^8.0.4",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.38.0",
    "prettier": "^3.7.4",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": [
      "oxlint --fix"
    ],
    "*.@(js|ts|tsx|yml|yaml|json|md|toml)": [
      "oxfmt --write"
    ],
    "*.rs": [
      "cargo fmt --"
    ]
  },
  "ava": {
    "cache": false,
    "extensions": {
      "ts": "module"
    },
    "files": [
      "packages/*/__test__/**/*.spec.ts"
    ],
    "nodeArguments": [
      "--import",
      "@oxc-node/core/register"
    ],
    "timeout": "1m"
  },
  "packageManager": "yarn@4.12.0"
}
