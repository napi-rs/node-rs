{
  "name": "node-rs",
  "version": "0.0.0",
  "description": "Node & Rust bindings monorepo",
  "author": "LongYinan <lynweklm@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "artifacts": "lerna run artifacts",
    "bench": "lerna run bench --concurrency 1 --stream --no-prefix",
    "build": "lerna run build --concurrency 1 --stream --no-prefix",
    "build:ts": "tsc -b tsconfig.project.json -verbose",
    "lint": "eslint . -c ./.eslintrc.yml \"packages/**/*.{ts,js}\"",
    "test": "ava",
    "format": "run-p format:prettier format:rs",
    "format:prettier": "prettier --config ./package.json -w .",
    "format:rs": "cargo fmt --all",
    "typecheck": "tsc -b tsconfig.project.json -verbose",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.4.0",
    "@swc-node/core": "^1.8.2",
    "@swc-node/register": "^1.4.2",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "ava": "^4.0.1",
    "benchmark": "^2.1.4",
    "codecov": "^3.8.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.7",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4"
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": [
      "eslint -c .eslintrc.yml --fix"
    ],
    "*.@(js|ts|tsx|yml|yaml|json|md)": [
      "prettier --write"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  }
}
